<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="loginPane" prefHeight="343.0" prefWidth="326.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.yandex.tonychem.interpalsviewbooster.controller.LoginController">
   <children>
      <Button fx:id="loginButton" layoutX="72.0" layoutY="262.0" mnemonicParsing="false" onAction="#clickAuthorizeButton" prefHeight="28.0" prefWidth="182.0" text="Sign in">
         <font>
            <Font name="Verdana" size="14.0" />
         </font>
      </Button>
      <Label fx:id="accountNameLabel" alignment="CENTER" layoutY="68.0" prefHeight="18.0" prefWidth="327.0" text="Account name">
         <font>
            <Font name="Verdana" size="14.0" />
         </font>
      </Label>
      <Label fx:id="passwordLabel" alignment="CENTER" layoutY="149.0" prefHeight="18.0" prefWidth="326.0" text="Password">
         <font>
            <Font name="Verdana" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="loginTextField" alignment="CENTER" layoutX="72.0" layoutY="101.0" promptText="enter your login">
         <font>
            <Font name="Verdana" size="14.0" />
         </font>
      </TextField>
      <PasswordField fx:id="passwordField" alignment="CENTER" layoutX="72.0" layoutY="176.0" promptText="enter your password">
         <font>
            <Font name="Verdana" size="14.0" />
         </font>
      </PasswordField>
      <Label fx:id="accountBoosterLabel" alignment="CENTER" opacity="0.47" prefHeight="62.0" prefWidth="326.0" text="Interpals Account Booster" AnchorPane.bottomAnchor="280.6" AnchorPane.topAnchor="0.0">
         <font>
            <Font name="Verdana" size="18.0" />
         </font>
      </Label>
      <Label fx:id="incorrectCredentialsLabel" alignment="CENTER" layoutY="223.0" prefHeight="18.0" prefWidth="326.0" text="Incorrect credentials" textFill="#d95454" visible="false">
         <font>
            <Font name="Verdana Bold" size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
